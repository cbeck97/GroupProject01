@model SignUp

@*This is the signup form. The user can enter all of their information to schedule a tour for the group.
This form creates create a signup object to the database*@
<div class="text-center">
    <form asp-action="Schedule" method="post">
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Appointment Slot</label>
            <div class="col-sm-10">
                <input type="text" disabled class="form-control-plaintext" value="@ViewData["output"]">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label">Group Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="GroupName">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="GroupSize" class="col-sm-2 col-form-label">Group Size</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" asp-for="GroupSize">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="EmailAddress" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="EmailAddress">
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="PhoneNumber">
            </div>
        </div>
        <input type="hidden" asp-for="AppointmentID" value="@ViewData["id"]" />
        <button type="submit">Schedule</button>
    </form>
    <div asp-validation-summary="All"></div>
</div>